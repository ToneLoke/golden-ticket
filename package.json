{
  "name": "golden-ticket",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "description": "Test monorepo with ts and lerna",
  "scripts": {
    "postinstall": "lerna link",
    "build-storybook": "build-storybook",
    "prebuild": "run-p tsc lint",
    "build": "lerna run --parallel 'build'",
    "postbuild": "yarn build:declarations",
    "commit": "git-cz",
    "fix": "run-p -c 'lint:* --fix'",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint": "run-p -c lint:*",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "start:dev": "yarn workspace @webtv/app bundle:dev && yarn workspace @webtv/app start",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "tsc": "tsc",
    "build:declarations": "lerna run --parallel 'build:declaration'"
  },
  "repository": {
    "type": "git",
    "url": "test"
  },
  "author": "toneloke",
  "license": "ISC",
